<nav class="nav-container">
  <div class="logo-wrapper">
    <div class="logo-background"></div>
    <div class="logo-text">AprioriDB</div>
  </div>
  <div class="nav-links">
    <div class="links-group">
      <a href="https://aprioridb.com" class="nav-link">Features</a>
      <a href="/blog" class="nav-link">Blog</a>
      <a href="/updates" class="nav-link">Updates</a>
    </div>
    <a href="/contact" class="contact-button">Contact Us</a>
  </div>
</nav>

<style>
  .nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.25rem 2rem;
    background-color: white;
    width: 100%;
  }

  .logo-wrapper {
    display: flex;
    align-items: center;
    position: relative;
    padding: 0.5rem 1.25rem;
  }

  .logo-background {
    width: 36px;
    height: 36px;
    background: radial-gradient(circle, rgba(92,46,184,1) 0%, rgba(92,46,184,0.18) 100%);
    border-radius: 50%;
    margin-right: 0.5rem;
  }

  .logo-text {
    font-family: 'Inter', sans-serif;
    font-weight: 700;
    font-size: 20px;
    color: rgb(48, 48, 54);
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 2.5rem;
  }

  .links-group {
    display: flex;
    gap: 2.5rem;
  }

  .nav-link {
    font-family: 'Inter', sans-serif;
    font-size: 15px;
    font-weight: 500;
    color: rgb(102, 102, 102);
    text-decoration: none;
    line-height: 2em;
    transition: color 0.2s ease;
  }

  .nav-link:hover {
    color: rgb(92, 46, 184);
  }

  .contact-button {
    background-color: rgb(23, 28, 38);
    color: white;
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    text-decoration: none;
    padding: 0.75rem 1.5rem;
    border-radius: 10px;
    transition: background-color 0.2s ease;
  }

  .contact-button:hover {
    background-color: rgb(92, 46, 184);
  }

  @media (max-width: 768px) {
    .nav-container {
      padding: 1rem;
      flex-direction: column;
      gap: 1rem;
    }

    .nav-links {
      flex-direction: column;
      gap: 1rem;
    }

    .links-group {
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
    }
  }
</style>